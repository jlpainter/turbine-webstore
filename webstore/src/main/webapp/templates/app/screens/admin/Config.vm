<div class="w3-container">
	<h2>Update Your Company's Profile</h2>
	<p>
		<b>
			Please take a moment to review your company profile and make updates as 
			appropriate. Also note that these changes take effect immediately and 
			are reflected on all documents generated by the JiveCast Webstore system on 
			behalf of your company. JiveCast is not responsible for the content you 
			enter on this page.
		</b>
	</p>
</div>

<div class="w3-container">




  <button onclick="openPanel('Paypal')" class="w3-button w3-block w3-left-align w3-light-grey">
    Your Paypal Credentials <div class="w3-right"><i class="fa fa-arrow-circle-down"></i></div>
  </button>
  
  <div id="Paypal" class="w3-container panel w3-hide w3-white">

		<p>	
		<h3>Paypal configuraiton</h3>
		
		<!-- ----------------------------------------------------------------------------------- -->
	   <form
			class="w3-container"
			name="contactUpdate"
			method="post"
			action="$link.setPage("admin,Config.vm").setAction("admin.ConfigSQL")">

			#if ( $config )
				<input type="hidden" name="refId" value="$!config.RefId">
			#end
		
			<p>
				#formCellRequired( "Paypal Client ID" "paypalClientId" $!config.PaypalClientId )
				#formCellRequired( "Paypal Client Secret" "paypalClientSecret" $!config.PaypalClientSecret )
				#formCheckBox( "Sandbox Mode", "paypalSandbox", $!config.PaypalSandbox)
			
			<br/>
			<input type="submit" name="eventSubmit_doPaypal" value="Save"/>
	    </form>
	
    	<p></p>
   </div>


  <button onclick="openPanel('Logo')" class="w3-button w3-block w3-left-align w3-light-grey">
    Your Logo <div class="w3-right"><i class="fa fa-arrow-circle-down"></i></div>
  </button>
  
  <div id="Logo" class="w3-container panel w3-hide w3-white">

	<p></p>
	
	<div align="center">
	#if ( $!config.hasLogo() )
			<div class="w3-card-2" style="width:92%;max-width:500px;">
			  <img src="$!link.setPage("admin,CompanyLogo.vm").setPage("admin,Config.vm")" title="Company Logo" style="width: 100%; opacity:0.85"/>
			  <div class="w3-container w3-blue">
				  <p><i>The image has been rescaled for preview purposes only</i></p>    
			  </div>
			</div>
	#else
		Please upload your logo image file.
	#end
	</div>
		
		<p>	
		<h3>Upload a new logo</h3>
		<h4>If your image does not display after uploading, please check that your file is a jpg, png or gif formatted image.</h4>
		<!-- ----------------------------------------------------------------------------------- -->
	    <form
	    	class="w3-container"
	        name="logoUpload"
	        method="post"
	        enctype="multipart/form-data"
	        action="$link.setPage("admin,Company.vm").setAction("admin.ConfigSQL")">

			#fileUpload( "Image File:" "file" )
			<input type="submit" name="eventSubmit_doUpload" value="Upload"/>
			
	    </form>
	
    	<p></p>
    	
  </div>
  
  <p>
  <button onclick="openPanel('Contact')" class="w3-button w3-block w3-left-align w3-light-gray">
    Your Contact Info <div class="w3-right"><i class="fa fa-arrow-circle-down"></i></div>
  </button>
  <div id="Contact" class="w3-container panel w3-hide">

		<p>	
		<h3>Contact information is displayed on the header of your PDF documents</h3>
		
		<!-- ----------------------------------------------------------------------------------- -->
	   <form
			class="w3-container"
			name="contactUpdate"
			method="post"
			action="$link.setPage("admin,Config.vm").setAction("admin.ConfigSQL")">

			#if ( $config )
				<input type="hidden" name="refId" value="$!config.RefId">
			#end
		
			<p>
				#formCellRequired( "Company Name" "companyName" $!config.CompanyName )
				#formCellRequired( "Address Line 1" "addressLine1" $!config.AddressLine1 )
				#formCell ( "Address Line 2" "addressLine2" $!config.AddressLine2 )
				#formCellRequired( "City" "city" $!config.City )
				#formCellRequired( "State" "state" $!config.State )
				#formCellRequired( "Zip Code" "zip" $!config.Zip )
				#formCellRequired( "Phone" "phone" $!config.Phone  )
				#formCellRequired( "Fax" "fax" $!config.Fax )
			
			<br/>
			<input type="submit" name="eventSubmit_doContact" value="Save"/>
			
	    </form>
	
    	<p></p>
  </div>

  <p>
  <button onclick="openPanel('Terms')" class="w3-button w3-block w3-left-align w3-light-gray">
    Your Terms &amp; Conditions <div class="w3-right"><i class="fa fa-arrow-circle-down"></i></div>
  </button>
  <div id="Terms" class="w3-container panel w3-hide">
	<p>	
		<h3>Terms &amp; Conditions</h3>
		<h4>Remember that these are legally binding conditions on your contracts. Please seek legal counsel for advice if you have any concerns.</h4>
		<!-- ----------------------------------------------------------------------------------- -->
	    <form
	    	class="w3-container"
	        name="termsUpdate"
	        method="post"
	        action="$link.setPage("admin,Company.vm").setAction("admin.ConfigSQL")">

			#formCell ("Number of days quotes are valid" "quoteDays" $!config.QuoteDays )

			#textareaField( "Quotes" "quote" $!config.getQuoteTerms() )
			#textareaField( "Order Confirmation" "confirm" $!config.getConfirmationTerms() )
			#textareaField( "Purchase Orders" "po" $!config.getPOTerms() )
			#textareaField( "Invoices" "invoice" $!config.getInvoiceTerms() )
			
			<br/>
			<input type="submit" name="eventSubmit_doTerms" value="Save"/>
			
	    </form>
	
    	<p></p>
  </div>
</div>


<script language="javascript">
	openPanel('Paypal');
</script>
